<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android="http://schemas.android.com/apk/res/android" app="http://schemas.android.com/apk/res-auto" tools="http://schemas.android.com/tools" layout_width="match_parent"
android:layout_height="match_parent" orientation="vertical" context=".SignUpActivity">
<TextView layout_width="match_parent" layout_height="wrap_content" textSize="48sp" textAlignment="center" text="Login" />
<EditText id="@+id/emailEditText" layout_width="match_parent"
layout_height="wrap_content" layout_margin="4dp" textSize="24sp"
hint="Email ID"
/>
<EditText id="@+id/passwordEditText" layout_width="match_parent" layout_height="wrap_content" layout_margin="4dp" layout_marginTop="32dp" textSize="24sp" inputType="textPassword" hint="Password"
/>
<Button id="@+id/loginBtn"
layout_width="match_parent" layout_height="wrap_content" layout_margin="4dp" text="Login"
/>
</LinearLayout 